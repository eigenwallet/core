{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:event:allow-emit",
    "core:event:default",
    "clipboard-manager:allow-write-text",
    "clipboard-manager:allow-read-text",
    "shell:allow-open",
    "store:default",
    "process:default",
    "updater:default",
    "process:allow-restart",
    "opener:default",
    "dialog:allow-open",
    "dialog:default"
  ]
}
